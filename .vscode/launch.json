{
	"version": "0.2.0",
	"configurations": [
        
		{
			"name": "Python: Greeter (Basic)",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"args": ["--name", "Alice"]
		},
		{
			"name": "Python: Greeter (Full Options)",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"args": [
				"--name",
				"Bob",
				"--greeting",
				"Hello",
				"--count",
				"3",
				"--uppercase"
			]
		},
		{
			"name": "Python: Current File",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"args": []
		}
	]
}
